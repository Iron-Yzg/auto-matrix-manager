{
  "name": "auto-matrix-manager",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "dev:full": "pnpm rust:dev",
    "rust:dev": "cd src-tauri && RUST_LOG=debug pnpm exec cargo tauri dev",
    "rust:build": "cd src-tauri && cargo build",
    "rust:check": "cd src-tauri && cargo check",
    "rust:clippy": "cd src-tauri && cargo clippy",
    "rust:release": "cd src-tauri && cargo build --release",
    "tauri:build": "cd src-tauri && cargo tauri build",
    "tauri:bundle": "cd src-tauri && cargo tauri bundle"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "hls.js": "^1.6.15",
    "vue": "^3.5.13",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tauri-apps/cli": "^2",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vue-tsc": "^2.1.10"
  }
}
